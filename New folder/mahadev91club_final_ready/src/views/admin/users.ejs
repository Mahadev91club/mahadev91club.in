<h2 class="mb-3">Users</h2>
<table class="table table-dark table-striped align-middle">
  <thead><tr><th>#</th><th>Name</th><th>Phone</th><th>Email</th><th>Coins</th><th>VIP</th><th>Actions</th></tr></thead>
  <tbody>
    <% users.forEach((u, i)=>{ %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= u.name || '-' %></td>
        <td><%= u.phone || '-' %></td>
        <td><%= u.email || '-' %></td>
        <td><%= u.coins %></td>
        <td><%= (u.vipTier||'none') %></td>
        <td>
          <form method="post" action="/admin/users/<%= u._id %>/add-coins" class="d-flex gap-2">
            <input name="coins" type="number" class="form-control form-control-sm" placeholder="Coins" min="1">
            <button class="btn btn-success btn-sm">Add</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
